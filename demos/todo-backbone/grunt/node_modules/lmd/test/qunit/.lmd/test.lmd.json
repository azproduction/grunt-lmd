{
    "name": "Main test - DOM environment",
    "root": "../modules/",
    "www_root": "../",

    "output": "../out/test.lmd.js",

    "modules": {
        "main": "main.js",

        "testcase_lmd_basic_features": "test_case/testcase_lmd_basic_features/testcase_lmd_basic_features.js",
        "testcase_lmd_async_require": "test_case/testcase_lmd_async_require/testcase_lmd_async_require.js",
        "testcase_lmd_loader": "test_case/testcase_lmd_loader/testcase_lmd_loader.js",
        "testcase_lmd_coverage": "test_case/testcase_lmd_coverage/testcase_lmd_coverage.js",
        "testcase_lmd_cache": "test_case/testcase_lmd_cache/testcase_lmd_cache.js",
        "testcase_lmd_amd":"test_case/testcase_lmd_amd/testcase_lmd_amd.js",
        "testcase_lmd_user_plugins": "test_case/testcase_lmd_user_plugins/testcae_lmd_user_plugins.js",
        "testcase_lmd_ignore_module": "test_case/testcase_lmd_ignore_module/testcase_lmd_ignore_module.js",
        "testcase_lmd_subdir": "test_case/testcase_lmd_subdir/testcase_lmd_subdir.js"

    },

    "version": "latest",
    "main": "main",
    "global": "this",

    "warn": true,
    "log": true,

    "depends": "*.lmd.json",

    "lazy": false,
    "pack": true,
    "pack_options": {
        "strict_semicolons": false,
        "mangle_options": {
            "mangle": true,
            "toplevel": false,
            "defines": null,
            "except": null,
            "no_functions": false
        },
        "squeeze_options": {
            "make_seqs": true,
            "dead_code": true,
            "no_warnings": false,
            "keep_comps": true,
            "unsafe": false
        },
        "gen_options": {
            "indent_start": 0,
            "indent_level": 4,
            "quote_keys": false,
            "space_colon": false,
            "beautify": false,
            "ascii_only": false,
            "inline_script": false
        }
    },

    "cache": true,
    "cache_async": true
}